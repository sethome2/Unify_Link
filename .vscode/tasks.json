{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "description": "CMake build type",
      "options": ["Debug", "Release"],
      "default": "Debug"
    }
  ],
  "tasks": [
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DUNIFY_LINK_BUILD_EXAMPLES=ON",
        "-DUNIFY_LINK_BUILD_TESTS=ON",
        "-DUNIFY_LINK_BUILD_PYTHON=ON",
        "-DCMAKE_BUILD_TYPE=${input:buildType}"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--config",
        "${input:buildType}"
      ],
      "problemMatcher": "$msCompile",
      "group": "build",
      "dependsOn": ["cmake: configure"]
    },
    {
      "label": "run: example_basic",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "if (Test-Path 'build/${input:buildType}/example_basic.exe') { & 'build/${input:buildType}/example_basic.exe' } else { & 'build/example_basic.exe' }"
      ],
      "problemMatcher": [],
      "dependsOn": ["cmake: build"]
    },
    {
      "label": "test: ctest",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--test-dir",
        "build",
        "-C",
        "${input:buildType}",
        "--output-on-failure"
      ],
      "problemMatcher": [],
      "dependsOn": ["cmake: build"]
    }
  ]
}
